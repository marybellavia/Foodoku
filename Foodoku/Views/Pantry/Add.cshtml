@model Foodoku.ViewModels.AddPantryItemViewModel

<h1>@ViewBag.title</h1>

<form asp-controller="Pantry" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name">Pantry Item Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Add Pantry Item" />
</form>